{
  "name": "@vonage/demo-messages-node-trivia-for-the-booth",
  "version": "1.0.0",
  "description": "A simple trivia game to be run at Vonages booth ",
  "license": "Apache-2.0",
  "author": "",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "build": "vite build",
    "dev": "npm run dev:web | npm run dev:api",
    "dev:api": "node --watch server/index.js",
    "dev:web": "vite",
    "eslint": "eslint",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "preview": "vite preview --host --port 5173",
    "test": "cross-env NODE_NO_WARNINGS=1 NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:cov": "cross-env NODE_NO_WARNINGS=1 NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:watch": "cross-env NODE_NO_WARNINGS=1 NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch"
  },
  "dependencies": {
    "@faker-js/faker": "10.0.0",
    "@vonage/vivid": "5.1.0",
    "better-sqlite3": "12.3.0",
    "debug": "4.4.3",
    "eslint-plugin-jest": "29.0.1",
    "jayson": "4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "eslint-plugin-n": "17.23.1",
    "jest": "30.2.0",
    "supertest": "7.1.4",
    "vite": "7.1.7"
  }
