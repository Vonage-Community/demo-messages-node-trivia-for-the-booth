<style>

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  color: #fff;
}

body {
  background: linear-gradient(135deg, #1A0833, #2D1159);
  animation: bgShift 25s ease-in-out infinite;
}

/* Full-page animation container */
.circles {
  position: fixed;
  inset: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: -1;
}

/* Floating shapes */
.circles li {
  position: absolute;
  display: block;
  list-style: none;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #60DEFE;
  opacity: 0.9;
  bottom: -150px;
  animation:
    floatUp 25s linear infinite,
    colorCycle 14s ease-in-out infinite alternate,
    shapeMorph 20s ease-in-out infinite alternate;
  mix-blend-mode: screen;
}

/* Float up & rotate */
@keyframes floatUp {
  0% {
    transform: translateY(0) rotate(0deg);
    opacity: 0.9;
  }
  100% {
    transform: translateY(-1000px) rotate(720deg);
    opacity: 0;
  }
}

/* Cycle through Vonage colors */
@keyframes colorCycle {
  0%   { background: #60DEFE; } /* cyan */
  25%  { background: #A663FF; } /* violet */
  50%  { background: #FD3FE4; } /* magenta */
  75%  { background: #FF9C9D; } /* coral */
  100% { background: #60DEFE; } /* loop */
}

/* Morph between circle and square subtly */
@keyframes shapeMorph {
  0%, 100% { border-radius: 50%; }
  25% { border-radius: 25%; }
  50% { border-radius: 0%; }
  75% { border-radius: 20%; }
}

/* Randomized sizes, timing, and horizontal positions */
.circles li:nth-child(1)  {
  left: 25%;
  width: 80px;
  height: 80px;
  animation-delay: 0s;
}

.circles li:nth-child(2)  {
  left: 10%;
  width: 20px;
  height: 20px;
  animation-delay: 2s;
  animation-duration: 12s;
}

.circles li:nth-child(3)  {
  left: 70%;
  width: 20px;
  height: 20px;
  animation-delay: 4s;
}

.circles li:nth-child(4)  {
  left: 40%;
  width: 60px;
  height: 60px;
  animation-delay: 0s;
  animation-duration: 18s;
}

.circles li:nth-child(5)  {
  left: 65%;
  width: 25px;
  height: 25px;
  animation-delay: 0s;
}

.circles li:nth-child(6)  {
  left: 75%;
  width: 110px;
  height: 110px;
  animation-delay: 3s;
}

.circles li:nth-child(7)  {
  left: 35%;
  width: 150px;
  height: 150px;
  animation-delay: 7s;
}

.circles li:nth-child(8)  {
  left: 50%;
  width: 25px;
  height: 25px;
  animation-delay: 15s;
  animation-duration: 45s;
}

.circles li:nth-child(9)  {
  left: 20%;
  width: 15px;
  height: 15px;
  animation-delay: 2s;
  animation-duration: 35s;
}

.circles li:nth-child(10) {
  left: 85%;
  width: 150px;
  height: 150px;
  animation-delay: 0s;
  animation-duration: 11s;
}


@keyframes bgShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
</style>

